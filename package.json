{
	"name": "easy-rd",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"migration:generate": "drizzle-kit generate:sqlite",
		"migration:list": "wrangler d1 migrations list easy-rd.web --local",
		"migration:list-prod": "wrangler d1 migrations list easy-rd.web",
		"migration:apply": "wrangler d1 migrations apply easy-rd.web --local",
		"migration:apply-prod": "wrangler d1 migrations apply easy-rd.web --remote",
		"prepare": "husky",
		"postinstall": "patch-package"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.3.1",
		"@reflow-work/test-fixture-factory": "^1.8.0",
		"@sentry/vite-plugin": "^2.22.4",
		"@sveltejs/adapter-cloudflare": "^4.7.2",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"autoprefixer": "^10.4.16",
		"clsx": "^2.1.0",
		"drizzle-kit": "^0.20.6",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^3.0.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"monaco-editor": "^0.45.0",
		"postcss": "^8.4.33",
		"postcss-jit-props": "^1.0.14",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.2.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-migrate": "^1.10.1",
		"tailwind-merge": "^2.2.2",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.4.1",
		"typescript": "^5.5.0",
		"vite": "^5.4.4",
		"zod": "^3.22.4"
	},
	"type": "module",
	"dependencies": {
		"@auth/sveltekit": "^1.5.0",
		"@dbml/core": "^3.0.0",
		"@jill64/sentry-sveltekit-cloudflare": "^1.7.16",
		"@meursyphus/flitter": "^1.0.0",
		"@meursyphus/flitter-svelte": "^1.0.0",
		"@svelte-put/copy": "^3.0.0",
		"@zerodevx/svelte-toast": "^0.9.5",
		"better-sqlite3": "^9.2.2",
		"drizzle-orm": "^0.29.1",
		"eslint-plugin-drizzle": "^0.2.2",
		"lodash": "^4.17.21",
		"patch-package": "^8.0.0",
		"pollen-css": "^4.6.2",
		"svelte-meta-tags": "^4.0.0",
		"svelte-portal": "^2.2.1",
		"wrangler": "^3.78.3"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,css,md,mdx,svelte}": [
			"prettier --write"
		]
	}
}
